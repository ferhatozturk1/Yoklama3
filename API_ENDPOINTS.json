{
  "api_info": {
    "base_url": "http://127.0.0.1:8000",
    "api_prefix": "lecturer_data",
    "port": 8000,
    "protocol": "HTTP",
    "content_type": "application/json",
    "cors": "enabled",
    "csrf": "disabled"
  },
  "endpoints": {
    "GET": {
      "universities": {
        "url": "/lecturer_data/universities/",
        "description": "Tüm üniversitelerin listesi",
        "response_type": "array"
      },
      "faculties": {
        "url": "/lecturer_data/faculties/{university_id}/",
        "description": "Belirli üniversitenin fakülteleri",
        "response_type": "array",
        "nested": ["university"]
      },
      "departments": {
        "url": "/lecturer_data/departments/{faculty_id}/",
        "description": "Belirli fakültenin departmanları",
        "response_type": "array",
        "nested": ["faculty", "university"]
      },
      "buildings": {
        "url": "/lecturer_data/buildings/{university_id}/",
        "description": "Belirli üniversitenin binaları",
        "response_type": "array",
        "nested": ["department", "faculty", "university"]
      },
      "classrooms": {
        "url": "/lecturer_data/classrooms/{building_id}/",
        "description": "Belirli binanın sınıfları",
        "response_type": "array",
        "nested": ["building", "department", "faculty", "university"]
      },
      "lectures": {
        "url": "/lecturer_data/lectures/{department_id}/",
        "description": "Belirli departmanın dersleri",
        "response_type": "array",
        "nested": ["department"]
      },
      "sections_by_lecture": {
        "url": "/lecturer_data/sections/lecture/{lecture_id}/",
        "description": "Belirli dersin section'ları",
        "response_type": "array",
        "nested": ["lecture", "lecturer"]
      },
      "section_detail": {
        "url": "/lecturer_data/sections/{section_id}/",
        "description": "Belirli section'ın detayı",
        "response_type": "object",
        "nested": ["lecture", "lecturer"]
      },
      "hours_by_section": {
        "url": "/lecturer_data/hours/section/{section_id}/",
        "description": "Belirli section'ın saatleri",
        "response_type": "array",
        "nested": ["section", "classroom"]
      },
      "hour_detail": {
        "url": "/lecturer_data/hours/{hour_id}/",
        "description": "Belirli saatin detayı",
        "response_type": "object",
        "nested": ["section", "classroom"]
      },
      "lecturer_profile": {
        "url": "/lecturer_data/lecturers/{lecturer_id}/",
        "description": "Öğretmen profil bilgileri",
        "response_type": "object"
      }
    },
    "POST": {
      "lecturer_signup": {
        "url": "/lecturer_data/lecturers/signup/",
        "description": "Yeni öğretmen kaydı",
        "required_fields": ["title", "first_name", "last_name", "email", "department_id", "password"],
        "response_type": "object"
      },
      "lecturer_login": {
        "url": "/lecturer_data/lecturers/login/",
        "description": "Öğretmen girişi",
        "required_fields": ["email", "password"],
        "response_type": "object"
      },
      "lecturer_logout": {
        "url": "/lecturer_data/lecturers/logout/",
        "description": "Öğretmen çıkışı",
        "required_fields": ["email"],
        "response_type": "object"
      },
      "create_section": {
        "url": "/lecturer_data/sections/lecture/{lecture_id}/",
        "description": "Yeni section oluşturma",
        "required_fields": ["section_number", "lecture_id", "lecturer_id"],
        "response_type": "object"
      },
      "create_hour": {
        "url": "/lecturer_data/hours/section/{section_id}/",
        "description": "Yeni saat oluşturma",
        "required_fields": ["order", "day", "time_start", "time_end", "section_id", "classroom_id"],
        "response_type": "object"
      }
    },
    "PUT": {
      "update_lecturer": {
        "url": "/lecturer_data/lecturers/{lecturer_id}/",
        "description": "Öğretmen profil güncelleme",
        "optional_fields": ["title", "first_name", "last_name", "email_update", "department_id", "phone"],
        "response_type": "object"
      },
      "update_section": {
        "url": "/lecturer_data/sections/{section_id}/",
        "description": "Section güncelleme",
        "required_fields": ["section_number"],
        "optional_fields": ["lecture_id", "lecturer_id"],
        "response_type": "object"
      },
      "update_hour": {
        "url": "/lecturer_data/hours/{hour_id}/",
        "description": "Saat güncelleme",
        "optional_fields": ["order", "day", "time_start", "time_end", "classroom_id"],
        "response_type": "object"
      }
    }
  },
